{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "lib": [
      "ES2020",
      "ES2019.Array"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
  },
  "exclude": [
    "node_modules"
  ]
}
